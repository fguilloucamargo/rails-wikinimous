<div class="container">
  <div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light"> <%= link_to "New article", new_article_path %></nav>
  </div>
  <div>
    <% @articles.each do |article| %>
      <h2><%= link_to article.title, article_path(article) %> </h2>
      <p><%= article.content %></p>
      <div>
        <%= link_to "Delete",
            article_path(article),
            method: :delete,
            data: { confirm: "Are you sure?" }  %>
      </div>
    <% end %>
  </div>
</div>
